<?xml version="1.0" encoding="UTF-8"?>

<!-- Root tag Of the XML -->
<!-- Bean Definition for Annotations -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- This is only used for xml Based Configurations
	 <bean id="vehicle" class="com.bridgelabz.spring.Bike"></bean> -->

	<!-- This is for Annotation Bases Configurations -->
	<context:component-scan 
		base-package="com.bridgelabz.spring"></context:component-scan> 
		
	<bean id="tyre" class="com.bridgelabz.spring.Tyre">
	
	<!-- Spring allows you to set Properties -->
	
	<!-- This is Setter Injection  -->
	<property name="tyreBrand" value="MRF"></property>
	
	<!-- This is Consturctor Injection  -->
	<constructor-arg value="CEAT"></constructor-arg>
	</bean>
</beans>